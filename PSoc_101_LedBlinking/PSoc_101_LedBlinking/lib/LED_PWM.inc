;--------------------------------------------------
; Constants for LED_PWM API's.
;--------------------------------------------------

LED_PWM_CONTROL_REG_START_BIT:             equ 0x01    ; Control register start bit
LED_PWM_INT_REG:                           equ 0x0e1
LED_PWM_INT_MASK:                          equ 0x01


;--------------------------------------------------
