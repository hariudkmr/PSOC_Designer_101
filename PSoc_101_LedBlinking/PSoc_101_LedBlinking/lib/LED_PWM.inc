LED_PWM_PULSE_WIDTH:                       equ 0x7f


;--------------------------------------------------
; Register Address Constants for LED_PWM
;--------------------------------------------------

LED_PWM_COUNTER_REG:                   equ 0x20   ; DR0 Count register
LED_PWM_PERIOD_REG:                    equ 0x21   ; DR1 Period register
LED_PWM_COMPARE_REG:                   equ 0x22   ; DR2 Compare register
LED_PWM_CONTROL_REG:                   equ 0x23   ; Control register
LED_PWM_FUNC_REG:                      equ 0x20   ; Function register
LED_PWM_INPUT_REG:                     equ 0x21   ; Input register
LED_PWM_OUTPUT_REG:                    equ 0x22   ; Output register


;--------------------------------------------------
; LED_PWM Macro 'Functions'
;--------------------------------------------------

   macro LED_PWM_Start_M
   or    reg[LED_PWM_CONTROL_REG],  LED_PWM_CONTROL_REG_START_BIT
   endm

   macro LED_PWM_Stop_M
   and   reg[LED_PWM_CONTROL_REG], ~LED_PWM_CONTROL_REG_START_BIT
   endm

   macro LED_PWM_EnableInt_M
   M8C_EnableIntMask LED_PWM_INT_REG, LED_PWM_INT_MASK
   endm

   macro LED_PWM_DisableInt_M
   M8C_DisableIntMask LED_PWM_INT_REG, LED_PWM_INT_MASK
   endm


